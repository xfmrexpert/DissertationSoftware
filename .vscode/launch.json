{
    "version": "0.2.0",
    "configurations": [
        {
            // Use IntelliSense to find out which attributes exist for C# debugging
            // Use hover for the description of the existing attributes
            // For further information visit https://github.com/dotnet/vscode-csharp/blob/main/debugger-launchjson.md
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/MTLTestUI.Desktop/bin/Debug/net9.0/MTLTestUI.Desktop.dll",
            "args": [],
            "cwd": "${workspaceFolder}/MTLTestUI.Desktop",
            // For more information about the 'console' field, see https://aka.ms/VSCode-CS-LaunchJson-Console
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },
         {
            "name": "Start dotnet test (wait)",
            "type": "coreclr",
            "request": "launch",
            "program": "dotnet",
            "args": [
            "test",
            "${workspaceFolder}/DissertationSoftware.Tests/DissertationSoftware.Tests.csproj",
            "--no-build",
            "--nologo",
            "--filter", "FullyQualifiedName~DissertationSoftware.Tests.UnitTest1.InductanceTest"
            ],
            "env": { "VSTEST_HOST_DEBUG": "1" },
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Attach to .NET testhost",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}",
            "justMyCode": true
        }
    ],
    "compounds": [
    {
        "name": "Debug tests (attach)",
        "configurations": ["Start dotnet test (wait)", "Attach to .NET testhost"]
    }
    ]
}